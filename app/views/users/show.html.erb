<hr>
<div class="container bootstrap snippet">

  <h1 class="p-5"><%= @user.first_name %></h1>

  <div class="row">

      <div class="col-sm-3">
        <div class="text-center">
          <img src="image" alt=>
          <h6>change profile picture</h6>
          <input type="file" class="text-center center-block file-upload">
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">Region</div>
        </div>
      </div>
      <!-- enf of col-sm-3 -->

      <div class="col-sm-9">

        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">My products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#messages">The products I rented</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#settings">The products I am renting</a>
          </li>
        </ul>

        <div class="tab-content">

          <div class="tab-pane active" id="home">
            <hr>
            <div class="d-flex flex-wrap">
              <% @user.items.each do |item| %>
                <div class="card" style="width: 50%;">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.title %></h5>
                    <p class="card-text"><%= item.description %></p>
                  </div>
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Edit
                  </button>
                  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                          <div class="modal-body">
                            <div class="form-group">
                              <label class="col-md control-label" for="Name (Full name)">Name (Full name)</label>
                              <div class="col-md">
                                <div class="input-group">
                                  <div class="input-group-addon">
                                  </div>
                                  <input id="Name (Full name)" name="Name (Full name)" type="text" placeholder="Name (Full name)" class="form-control input-md">
                                </div>
                              </div>
                            </div>
                            <div class="form-group">
                            <label class="col-md control-label" for="Upload photo">Upload photo</label>
                                <div class="col-md">
                                  <input id="Upload photo" name="Upload photo" class="input-file" type="file">
                                </div>
                            </div>
                            <div class="form-group">
                            <label class="col-md control-label" for="Overview (max 400 words)">Overview (max 400 words)</label>
                              <div class="col-md">
                                <textarea class="form-control" rows="10"  id="Overview (max 200 words)" name="Overview (max 200 words)">Overview</textarea>
                              </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
            </div>
            <hr>
          </div>


          <div class="tab-pane" id="messages">
            <hr>
              <div class="d-flex flex-wrap">
                <% @user.reservations_on_own_items.each do |reservation|  %>
                  <div class="card" style="width: 50%;">
                    <div class="card-body">
                      <h5 class="card-title"><%= reservation.item.title %></h5>
                      <p class="card-text"><%= reservation.user.first_name %></p>
                    </div>
                  </div>
                <% end %>
              </div>
            <hr>
          </div>

          <div class="tab-pane" id="settings">
            <hr>
              <div class="d-flex flex-wrap">
                <% @user.reservations_made_on_other_items.each do |rentthing|  %>
                  <div class="card" style="width: 50%;">
                    <div class="card-body">
                      <h5 class="card-title"><%= rentthing.item.title %></h5>
                       <p class="card-text"><%= rentthing.item.user.first_name %></p>
                    </div>
                  </div>
                <%end%>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
