<div class="btn-group">
      <form action="/" method="get">
      <input type="text" name="search" placeholder="enter search">
      <input type="submit">
      </form>
      <form action="/" method="get">
      <button name="" type="submit" value="">Reset Search</button>
      </form>
</div>

<div class="container">
  <h2 id='counter'> Item Count = <%= @items.length %> </h2>

  <br>
  <div class="row">
    <div class="col-lg-3">
      <%= render "filter" %>
    </div>
    <div class="col-lg-9">
      <% @items.each do |item| %>
        <%= render "items/item_card", item: item %>
      <% end %>
    </div>
  </div>
